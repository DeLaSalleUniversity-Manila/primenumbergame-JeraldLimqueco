<LinearLayout
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#030104"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="130dp" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/buttongroup"
        android:orientation="horizontal"
        android:layout_below="@+id/textViewNumber"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:background="@drawable/background"
        android:layout_weight="0.25"
        android:weightSum="1">




        <TextView
            android:layout_width="212dp"
            android:layout_height="83dp"
            android:text=""
            android:id="@+id/score"
            android:textSize="40sp"
            android:textColor="#FFFCF9FA"
            android:gravity="left"
            android:layout_weight="1.05" />

    </LinearLayout>
    <TextView
        android:layout_width="352dp"
        android:layout_height="wrap_content"

        android:text=""
        android:textSize="70sp"
        android:id="@+id/number"
        android:textColor="#FFFCF9FA"
        android:layout_weight="0.57" />
    <Button
        android:id="@+id/composite_button"
        android:layout_width="185dp"
        android:layout_height="wrap_content"

        android:onClick="onClickComposite"
        android:text=""
        android:background="@drawable/composite" />

    <Button
        android:id="@+id/prime_button"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="onClickPrime"
        android:text=""
        android:background="@drawable/prime"
        android:layout_gravity="left"
        android:layout_weight="0.06" />


</LinearLayout>